# A pressão de um botão do tipo 0 (zero)
# Caso esteja pressionado, o fundo tem a cor
# Color8(48, 48, 48, 255) (cinza escuro)
# e a borda tem a mesma cor:
# Color8(48, 48, 48, 255) (cinza escuro)
# Caso não esteja pressionado, o fundo tem a cor
# Color8(0, 0, 0, 255) (preto)o fundo
# e a borda tem a cor
# Color8(255, 255, 255, 255) (branco)
func pressionar_tipo_0(objeto: Panel, pressionado: bool) -> void:
	var dupla = objeto.get_theme_stylebox("panel").duplicate()
	if pressionado:
		dupla.bg_color = Color8(48, 48, 48, 255)
		objeto.add_theme_stylebox_override("panel", dupla)
	elif not pressionado:
		dupla.bg_color = Color8(0, 0, 0, 255)
		objeto.add_theme_stylebox_override("panel", dupla)


