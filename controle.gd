					if get_viewport_rect().size.y / get_viewport_rect().size.x >= 1 and objeto.position.y + (event.position.y - old_drag_y_position) > -objeto.size_y + get_viewport_rect().size.y * 0.8 and objeto.position.y + (event.position.y - old_drag_y_position) < get_viewport_rect().size.y * 0.2:
