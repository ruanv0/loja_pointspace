func continuar_compra(lugar: int, preco_unidade: int, unidades: int, nome: String, codinome: String) -> void:
	$menu_enderecos.visible = true
	comprando = true
	escolher_endereco()
	if lugar == 0:
		$menu_loja.visible = false
		$selecao_loja_perfil.visible = false
	elif lugar == 1:
		$produtos.get_child(0).visible = false
	dados_compra = [preco_unidade, unidades, nome, codinome]


func finalizar_compra() -> void:
	user_info.gastar_dinheiro(dados_compra[0], dados_compra[1], dados_compra[2], dados_compra[3])
	dados_compra = []
	if $produtos.get_child_count() == 1:
		$produtos.get_child(0).free()
	$menu_enderecos.visible = false
	$menu_enderecos/enderecos_texto.visible = true
	$menu_enderecos/escolher.visible = false
	$menu_enderecos/adicionar.visible = true
