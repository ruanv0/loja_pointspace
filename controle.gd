func _input(event) -> void:
	if event is InputEventKey and event.keycode == KEY_ESCAPE and not event.pressed:
		notification(NOTIFICATION_WM_GO_BACK_REQUEST)
		scroll_speed = 0
	# Caso o usuário retire o dedo sobre os botões
	elif event is InputEventScreenTouch and not event.pressed:
		# Caso o usuário retire o dedo sobre o botões da $selecao_loja_perfil
		if $selecao_loja_perfil.visible:
			# Se o index da retirada do toque for igual ao index do toque e
			# se o dedo foi retirado no botão de 'loja' e o 'perfil' estiver selecionado
			if (selecionado == 1 and not drag_fora_botao_loja and event.index == botoes_pressionados[0]) and ((get_viewport_rect().size.y / get_viewport_rect().size.x >= 1 and event.position.x <= $selecao_loja_perfil.size.x / 2 and event.position.y > $selecao_loja_perfil.global_position.y) or (get_viewport_rect().size.x / get_viewport_rect().size.y > 1 and event.position.y <= $selecao_loja_perfil.size.y / 2 and event.position.x < $selecao_loja_perfil.size.x)):
				pressionar_perfil(false)
				mostrar_perfil(false)
				pressionar_loja(true)
				mostrar_loja(true)
				selecionado = 0
			# Se o index da retirada do toque for igual ao index do toque e
			# se o dedo foi retirado fora do botão, a ação de selecionar 'loja' não será executada
			elif event.index == botoes_pressionados[0] and selecionado == 1:
				pressionar_loja(false)
				botoes_pressionados[0] = -1
				drag_fora_botao_loja = false
			# Se o index da retirada do toque do botão 'loja' for igual ao index do toque e
			# se o dedo foi tirado no botão de 'perfil' e a 'loja' estiver selecionado
			if (selecionado == 0 and not drag_fora_botao_perfil and event.index == botoes_pressionados[1]) and ((get_viewport_rect().size.y / get_viewport_rect().size.x >= 1 and event.position.x >= $selecao_loja_perfil.size.x / 2 and event.position.y > $selecao_loja_perfil.global_position.y) or (get_viewport_rect().size.x / get_viewport_rect().size.y > 1 and event.position.y >= $selecao_loja_perfil.size.y / 2 and event.position.x < $selecao_loja_perfil.size.x)):
				pressionar_perfil(true)
				mostrar_perfil(true)
				pressionar_loja(false)
				mostrar_loja(false)
				selecionado = 1
			# Se o index da retirada do toque for igual ao index do toque e
			# se o dedo foi tirado fora do botão,
			# a ação de selecionar 'perfil' não será executada
			elif botoes_pressionados[1] == event.index and selecionado == 0:
				pressionar_perfil(false)
				botoes_pressionados[1] = -1
				drag_fora_botao_perfil = false
		# Caso o usuário retire o dedo sobre os botões de $menu_perfil
		if $menu_perfil.visible:
			# Se o index da retirada do toque for igual ao index do toque e
			# se o dedo foi colocado e tirado no botão de "Editar dinheiro"
			if editar_dinheiro_pressionado == event.index and not drag_fora_botao_editar_dinheiro and event.position.x > $menu_perfil/editar.global_position.x and event.position.y > $menu_perfil/editar.global_position.y and event.position.x < $menu_perfil/editar.global_position.x + $menu_perfil/editar.size.x and event.position.y < $menu_perfil/editar.global_position.y + $menu_perfil/editar.size.y:
				editar_dinheiro()
				pressionar_tipo_0($menu_perfil/editar, false)
				editar_dinheiro_pressionado = -1
			# Se o index da retirada do toque for igual ao index do toque,
			# se o dedo foi colocado no botão de 'Editar dinheiro' e
			# foi tirado fora do botão de "Editar dinheiro", a ação não será executada
			elif editar_dinheiro_pressionado == event.index:
				pressionar_tipo_0($menu_perfil/editar, false)
				drag_fora_botao_editar_dinheiro = false
			# Se o index da retirada do toque for igual ao index do toque e
			# se o dedo foi colocado e foi solto no botão de endereços,
			# os endereços serão exibidos, o perfil e a barra inferior serão ocultas.
			if enderecos_pressionado == event.index and not drag_fora_botao_enderecos and event.position.x > $menu_perfil/enderecos.global_position.x and event.position.y > $menu_perfil/enderecos.global_position.y and event.position.x < $menu_perfil/enderecos.global_position.x + $menu_perfil/enderecos.size.x and event.position.y < $menu_perfil/enderecos.global_position.y + $menu_perfil/enderecos.size.y:
				pressionar_tipo_0($menu_perfil/enderecos, false)
				$menu_enderecos.visible = true
				$menu_perfil.visible = false
				$selecao_loja_perfil.visible = false
				enderecos_pressionado = -1
			# Se o index da retirada do toque for igual ao index do toque,
			# se o dedo foi colocado no botão de endereços e
			# foi solto fora do botão de endereços,
			# os endereços não serão exibidos.
			elif enderecos_pressionado == event.index:
				pressionar_tipo_0($menu_perfil/enderecos, false)
				drag_fora_botao_enderecos = false
			# Se o index da retirada do toque for igual ao index do toque e
			# se o dedo foi colocado e foi retirado no botão de 'histórico de compras',
			# o histórico de compras será mostrado
			if historico_pressionado == event.index and not drag_fora_botao_historico and event.position.x > $menu_perfil/historico.global_position.x and event.position.y > $menu_perfil/historico.global_position.y and event.position.x < $menu_perfil/historico.global_position.x + $menu_perfil/historico.size.x and event.position.y < $menu_perfil/historico.global_position.y + $menu_perfil/historico.size.y:
				pressionar_tipo_0($menu_perfil/historico, false)
				mostrar_historico(true)
				historico_pressionado = -1
			# Se o index da retirada do toque for igual ao index do toque,
			# se o dedo foi colocado no botão de 'histórico de compras'
			# e foi retirado fora do botão de 'histórico de compras',
			# o histórico de compras será mostrado
			elif historico_pressionado == event.index:
				pressionar_tipo_0($menu_perfil/historico, false)
				drag_fora_botao_historico = false
			if editar_dinheiro_concluir_pressionado == event.index and not drag_fora_botao_concluir and event.position.x >= $janelas/editar_dinheiro/concluir.global_position.x and event.position.y >= $janelas/editar_dinheiro/concluir.global_position.y and event.position.x <= $janelas/editar_dinheiro/concluir.global_position.x + $janelas/editar_dinheiro/concluir.size.x and event.position.y <= $janelas/editar_dinheiro/concluir.global_position.y + $janelas/editar_dinheiro/concluir.size.y:
				pressionar_tipo_0($janelas/editar_dinheiro/concluir, false)
				concluir_editar_dinheiro()
				$janelas/editar_dinheiro.visible = false
				$janelas/fundo_escuro.visible = false
				editar_dinheiro_concluir_pressionado = -1
			elif editar_dinheiro_concluir_pressionado == event.index:
				pressionar_tipo_0($janelas/editar_dinheiro/concluir, false)
				editar_dinheiro_concluir_pressionado = -1
				drag_fora_botao_concluir = false
		# Se o erro está vísivel,
		# se o index da retirada do toque for igual ao index do toque,
		# e se o usuário colocou o dedo no botão de 'fechar o erro'
		# e o usuário retire o dedo sobre o botão de fechar o erro,
		# o erro será fechado
		if $janelas/erro0.visible and fechar_erro_0_pressionado == event.index and event.position.x > $janelas/erro0/fechar.global_position.x and event.position.y > $janelas/erro0/fechar.global_position.y and event.position.x < $janelas/erro0/fechar.global_position.x + $janelas/erro0/fechar.size.x and event.position.y < $janelas/erro0/fechar.global_position.y + $janelas/erro0/fechar.size.y:
			pressionar_fechar_erro_0(false)
			mostrar_erro_0(false)
			fechar_erro_0_pressionado = -1
		# Se o index da retirada do toque for igual ao index do toque,
		# se o usuário colocou o dedo no botão de 'fechar o erro'
		# e o usuário retire o dedo fora do botão de fechar o erro,
		# o erro não será fechado
		elif fechar_erro_0_pressionado == event.index:
			pressionar_fechar_erro_0(false)
			fechar_erro_0_pressionado = -1
		# Se $menu_loja estiver vísivel e nenhum erro esteja vísivel
		if $menu_loja.visible and not $janelas/fundo_escuro.visible:
			# Para cada capa de produto
			for objeto in $menu_loja/capas_produtos.get_children():
				# Se o index da retirada do toque for igual ao index do toque,
				# se o botão de 'comprar' da capa do produto foi pressionado e
				# o usuário não deslizou o dedo na tela,
				# levar o usuário a escolher o endereço e comprar
				if event.index == comprar_capa_pressionado and not drag_loja and event.position.x >= objeto.get_node("comprar").global_position.x and event.position.y >= objeto.get_node("comprar").global_position.y and event.position.x <= objeto.get_node("comprar").global_position.x + objeto.get_node("comprar").size.x and event.position.y <= objeto.get_node("comprar").global_position.y + objeto.get_node("comprar").size.y: 
					pressionar_comprar_capa(objeto, false)
					comprar(objeto)
					comprar_capa_pressionado = -1
				# Se o index da retirada do toque for igual ao index do toque,
				# se o objeto 'comprar' tem a cor HTML 303030ff, então o botão não foi pressionado
				# e se o objeto tiver uma cor diferente, então ele foi pressionado
				elif event.index == comprar_capa_pressionado and objeto.get_node("comprar").get_theme_stylebox("panel").bg_color.to_html() != "303030ff":
					pressionar_comprar_capa(objeto, false)
					comprar_capa_pressionado = -1
				# Se o index da retirada do toque for igual ao index do toque
				# e se o dedo do usuário não deslizou na tela e
				# o fundo da capa do produto foi pressionado
				elif event.index == fundo_capa_pressionado and not drag_loja and event.position.x >= objeto.global_position.x and event.position.y >= objeto.global_position.y and event.position.x <= objeto.global_position.x + objeto.size.x and event.position.y <= objeto.global_position.y + objeto.size.y: 
					ir_detalhes_produto(objeto)
					pressionar_fundo_capa(objeto, false)
					fundo_capa_pressionado = -1
				# Se o index da retirada do toque for igual ao index do toque
				# e a cor do fundo da capa for diferente da cor HTML 000000ff
				# (que significa que o fundo foi pressionado)
				elif event.index == fundo_capa_pressionado and objeto.get_theme_stylebox("panel").bg_color.to_html() != "000000ff":
					pressionar_fundo_capa(objeto, false)
					fundo_capa_pressionado = -1
			if drag_index == event.index:
				old_drag_y_position = -1
				drag_index = -1
				drag_loja = false
		# Caso o usuário coloque o dedo sobre os botões de $menu_enderecos
		if $menu_enderecos.visible:
			# Se a pergunta "Você quer deletar este endereço?" estiver vísivel
			if $janelas/deletar_fundo.visible:
				# Se o index da retirada do toque for igual ao index do toque,
				# o dedo do usuário tocou no botão 'Sim' e se retirou no botão 'Sim'
				if event.index == sim_deletar_pressionado and event.position.x >= $janelas/deletar_fundo/sim_deletar.global_position.x and event.position.y >= $janelas/deletar_fundo/sim_deletar.global_position.y and event.position.x <= $janelas/deletar_fundo/sim_deletar.global_position.x + $janelas/deletar_fundo/sim_deletar.size.x and event.position.y <= $janelas/deletar_fundo/sim_deletar.global_position.y + $janelas/deletar_fundo/sim_deletar.size.y:
					pressionar_tipo_0($janelas/deletar_fundo/sim_deletar, false)
					sim_deletar_pressionado = -1
					deletar_endereco()
				# Se o index da retirada do toque for igual ao index do toque,
				# o dedo do usuário tocou no botão 'Sim' e se retirou fora do botão 'Sim'
				elif event.index == sim_deletar_pressionado:
					pressionar_tipo_0($janelas/deletar_fundo/sim_deletar, false)
					sim_deletar_pressionado = -1
				# Se o index da retirada do toque for igual ao index do toque,
				# o dedo do usuário tocou no botão 'Não' e se retirou no botão 'Não'
				elif event.index == nao_deletar_pressionado and event.position.x >= $janelas/deletar_fundo/nao_deletar.global_position.x and event.position.y >= $janelas/deletar_fundo/nao_deletar.global_position.y and event.position.x <= $janelas/deletar_fundo/nao_deletar.global_position.x + $janelas/deletar_fundo/nao_deletar.size.x and event.position.y <= $janelas/deletar_fundo/nao_deletar.global_position.y + $janelas/deletar_fundo/nao_deletar.size.y:
					pressionar_tipo_0($janelas/deletar_fundo/nao_deletar, false)
					nao_mostrar_pergunta_deletar()
					nao_deletar_pressionado = -1
				# Se o index da retirada do toque for igual ao index do toque,
				# o dedo do usuário tocou no botão 'Não' e se retirou fora do botão 'Não'
				elif event.index == nao_deletar_pressionado:
					pressionar_tipo_0($janelas/deletar_fundo/nao_deletar, false)
					nao_deletar_pressionado = -1
			# Se o index da retirada do toque for igual ao index do toque,
			# o dedo do usuário tocou no botão 'Adicionar' endereço e
			# se retirou no botão "Adicionar'
			elif event.index == adicionar_pressionado and not drag_fora_botao_adicionar and $menu_enderecos/adicionar.visible and event.position.x >= $menu_enderecos/adicionar.global_position.x and event.position.y >= $menu_enderecos/adicionar.global_position.y and event.position.x <= $menu_enderecos/adicionar.global_position.x + $menu_enderecos/adicionar.size.x and event.position.y <= $menu_enderecos/adicionar.global_position.y + $menu_enderecos/adicionar.size.y:
